# Configuración SQL Server
# Copia este archivo a sql.env y configura tus valores

# Configuración base
SQL_USER=sa
SQL_PASSWORD=abcd123*
SQL_DATABASE=adPRUEBA
SQL_INSTANCE=COMPAC

# Servidores por entorno
# Para desarrollo (cuando estés conectado por VPN)
SQL_SERVER_DEV=192.168.0.11

# Para producción (cuando esté en el servidor)
SQL_SERVER_PROD=192.168.0.11

# Servidor por defecto
SQL_SERVER=192.168.0.11

# Configuración de conexión
SQL_CONNECTION_TIMEOUT=15000
SQL_REQUEST_TIMEOUT=15000
SQL_POOL_MAX=10
SQL_POOL_MIN=0
SQL_POOL_IDLE_TIMEOUT=30000

